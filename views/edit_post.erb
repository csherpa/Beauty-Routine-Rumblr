<% @title = 'Edit Post' %>
<div style='margin-left: 500px'>
  <div class="row">
    <div class="col-8">
      <h2>Edit post</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <form method="POST" action="/posts/<%= @current_post.id %>"> 
      <input type="hidden" name="_method" value="PUT">
        <div class="row">
          <div class="col-8">
            <label for="title">Title</label>
            <input type="text" name="post_name" class="form-control" placeholder="Enter a name" value="<%= @current_post.post_name %>">
          </div>
        </div>

        <div class="row">
          <div class="col-8">
            <label for="">Post</label>
                <input type='text' name="post_info" class="form-control" placeholder="Enter new post" value="<%= @current_post.post_info %>"></input></br>
          </div>
        </div>
        <input type="submit" value="Update" class="btn btn-outline-success btn-sm current_btn">
      </form>
    </div>
  </div>  

    <div class="row">
        <div class="col-8">
        <form method="POST" action="/posts/<%= @current_post.id %>">
        <input type="hidden" name="_method" value="DELETE">
        <a href="/">
            <button type="button" action="/" name="cancel" class="btn btn-outline-secondary btn-sm current_btn">
            Cancel
            </button>
        </a>
        <button type="submit" name="signup" class="btn btn-outline-success btn-sm current_btn">
            Delete Post
        </button>
        </div>
    </div>
</div>


       






